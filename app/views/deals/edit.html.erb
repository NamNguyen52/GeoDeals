<h1>Edit</h1>

<%= form_for @deal, url: deal_path(@deal), html: {method: :patch} do |d| %>

	<%= d.label :name %>
	<%= d.text_field :name %>

	<%= d.label :description %>
	<%= d.text_area :description, size: "50x10" %>

	<%= d.label :fine_print %>
	<%= d.text_area :fine_print, size: "50x10" %>

	<%= d.label :start_date %>
	<%= d.date_select :start_date %>

	<%= d.label :end_date %>
	<%= d.date_select :end_date %>

	<%= d.submit "submit update" %>

<% end %>


<%= link_to "Go Back", index_path %>
